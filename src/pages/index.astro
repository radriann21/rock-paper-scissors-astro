---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Rock, Papper, Scissors">
	<main class="w-full min-h-screen p-4 md:p-8 flex justify-center">
		<header class="w-full lg:w-[60%] h-fit md:py-4 py-2 px-4 md:px-8 flex items-center justify-between rounded-xl border-2 border-neutral-header-outline">
			<section class="flex-1 text-lg md:text-3xl font-bold uppercase leading-none">
				<p class="m-0 p-0 leading-none">Rock</p>
				<p class="m-0 p-0 leading-none">Paper</p>
				<p class="m-0 p-0 leading-none">Scissors</p>
			</section>

			<section class="flex-0">
				<div class="w-24 md:w-32 h-fit bg-white rounded-xl py-4">
					<p class="text-neutral-score-text uppercase tracking-wide font-bold text-center">Score</p>
					<p class="text-neutral-dark-text font-bold text-xl md:text-6xl text-center">0</p>
				</div>
			</section>
		</header>
	</main>
</Layout>


